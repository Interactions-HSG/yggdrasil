@base <http://localhost:8080/workspaces/test/artifacts/c0> .
@prefix hctl: <https://www.w3.org/2019/wot/hypermedia#> .
@prefix htv: <http://www.w3.org/2011/http#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix prov: <http://www.w3.org/ns/prov#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix urn: <http://example.org/urn#> .
@prefix ex: <http://example.org/> .
@prefix xs: <http://www.w3.org/2001/XMLSchema#> .
@prefix hmas: <https://purl.org/hmas/> .

<> a hmas:ResourceProfile;
  hmas:exposesSignifier <#http://example.org/Increment>;
  hmas:isProfileOf <#artifact>;
  hmas:isContainedIn <../../test> .

<#http://example.org/Increment> a hmas:Signifier;
  hmas:signifies [ a sh:NodeShape;
      sh:class hmas:ActionExecution;
      sh:property [
          sh:path prov:used;
          sh:minCount "1"^^xs:int;
          sh:maxCount "1"^^xs:int;
          sh:hasValue <#inc>
        ]
    ] .

<#inc> a hctl:Form;
  hctl:hasTarget <c0/increment>;
  htv:methodName "POST";
  hctl:forContentType "application/json" .

<#artifact> a hmas:Artifact, ex:Counter .

<../../test> a hmas:Workspace .
